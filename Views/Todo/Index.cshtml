@model IEnumerable<Core.Models.TodoItem>

@{
    ViewData["Title"] = "Todo List";
}

<div class="container mt-5">
    <h1 class="text-center mb-4 text-primary">Todo List</h1>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    
    <form asp-action="Add" method="post" class="d-flex justify-content-center mb-4">
        <input type="text" name="title" placeholder="Enter new task..." class="form-control w-50" />
        <button type="submit" class="btn btn-success ms-2">Add</button>
    </form>

  
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th style="width: 10%">#</th>
                    <th style="width: 50%">Task</th>
                    <th style="width: 15%">Status</th>
                    <th style="width: 25%">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var todo in Model)
                {
                    <tr>
                        <td>@todo.Id</td>
                        <td>@todo.Title</td>
                        <td>
                            @if (todo.IsCompleted)
                            {
                                <span class="badge bg-success">Completed</span>
                            }
                            else
                            {
                                <span class="badge bg-warning text-dark">Pending</span>
                            }
                        </td>
                        <td>
                            <form asp-action="ToggleComplete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@todo.Id" />
                                <button type="submit" class="btn btn-sm btn-info">
                                    @(todo.IsCompleted ? "Undo" : "Complete")
                                </button>
                            </form>

                            <form asp-action="Delete" method="post" class="d-inline ms-1">
                                <input type="hidden" name="id" value="@todo.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted">No tasks found. Add one above 👆</p>
    }

    <div class="text-center mt-4">
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">⬅ Back to Home</a>
    </div>
</div>
